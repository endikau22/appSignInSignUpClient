                  <Label fx:id="lblPreguntaCuenta" text="*¿Ya tienes una cuenta? ">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Hyperlink fx:id="hplIniciaSesion" text="Iniciar sesión">
                     <HBox.margin>
                        <Insets top="7.0" />
